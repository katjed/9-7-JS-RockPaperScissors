{
  "name": "learning-git",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "init-project": "npm install && npm run init:dirs && npm run init:files && npm run init:gitignore",
    "init:dirs": "mkdirp sass css vendor images js",
    "init:files": "touch README.md index.html sass/style.scss js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "test": "npm run test:html && npm run test:js",
    "test:html": "glob-run nu-html-checker *.html",
    "test:js": "glob-run jshint js/*.js",
    "build": "npm run build:clean && npm run build:sass && npm run build:autoprefixer && npm run test",
    "build:clean": "rm -rf css/",
    "build:sass": "node-sass --output-style compact -o css sass",
    "build:sass:dev": "node-sass --output-style expanded --source-map true -o css sass",
    "build:autoprefixer": "autoprefixer-cli css/style.css",
    "watch": "parallelshell \"npm run watch:sassprefixer\" \"npm run watch:browser-sync\" ",
    "watch:helper": "npm run build:sass:dev && npm run build:autoprefixer",
    "watch:sassprefixer": "onchange -d 100 sass/ -- npm run watch:helper",
    "watch:browser-sync": "browser-sync start --server --files css/*.css *.html --browser \"chrome\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/katjed/learning-git.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/katjed/learning-git/issues"
  },
  "homepage": "https://github.com/katjed/learning-git#readme",
  "dependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.22.0",
    "glob-run": "^0.1.6",
    "jshint": "^2.9.5",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.7.2",
    "nu-html-checker": "^0.1.0",
    "onchange": "^3.3.0",
    "parallelshell": "^3.0.2",
    "rimraf": "^2.6.2"
  }
}
